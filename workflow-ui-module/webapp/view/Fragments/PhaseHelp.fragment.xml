<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
	<TableSelectDialog
		noDataText="No Phases Found"
		searchPlaceholder="Search Phases by ID, Name, and Description"
		title="Select a Phase"
		liveChange=".on_liveSearch"
		search=".on_Search"
		confirm=".handlePhaseClose"
		cancel=".handlePhaseClose"
		items="{Phase>/}">
		<ColumnListItem vAlign="Middle">
			<cells>
				<Text text="{Phase>ID}" />
				<Text text="{Phase>Name}" />
				<Text text="{Phase>Description}" />
				<Text text="{Phase>ProjectManager}" />
				<!-- <Text text="{Phase>CompanyID}" />
				<Text text="{Phase>CompanyDescription}" /> -->
			</cells>
		</ColumnListItem>
		<columns>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Phase ID" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Name" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Description" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Project Manager" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>
