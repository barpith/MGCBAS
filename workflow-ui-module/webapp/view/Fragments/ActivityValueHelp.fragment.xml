<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="No Activities Found"
		title="Select Activities"
		searchPlaceholder="Search Activity by ID, Name, Permission_ID, and Permission_Name"
		liveChange="onActivitySearchValue"
		confirm="handleActivityClose"
		cancel="handleActivityClose"
		contentWidth="30vw"
		items="{Activities>/}">
		<ColumnListItem vAlign="Middle">
			<cells>
				<Text text="{Activities>ActivityID}" />
				<Text text="{Activities>ActivityName}" />
				<!-- <Text text="{Activities>PermissionID}" />
				<Text text="{Activities>PermissionName}" /> -->
			</cells>
		</ColumnListItem>
		<columns>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Activity ID" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Activity Name" />
				</header>
			</Column>
			<!-- <Column id="_IDGenColumn3a3" minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text id="_IDGenText7a7" text="Permission ID" />
				</header>
			</Column>
			<Column id="_IDGenColumn4a4" minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text id="_IDGenText8a8" text="Permission Name" />
				</header>
			</Column> -->
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>