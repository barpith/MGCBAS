<mvc:View controllerName="com.mgc.crewprd.workflowuimodule.controller.App"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
    <App id="app">
    <Page id = "scroll" >
            <content>
            <!-- <Panel id="Panel_100" width="auto" class="sapUiResponsiveMargin">
            <l:HorizontalLayout id="_IDGenHorizontalLayout1"  class="sapUiLargeMarginEnd"  >
            <Label id="_IDGenLabel1" text="Date :"  class="sapUiTinyMarginTop sapUiSmallMarginEnd" />
             <Text id="dateTextField" text="" />
            <DatePicker id="datepicker_1" value="{
                                'path': '/currentDate',
                                'type': 'sap.ui.model.type.Date',
                                'formatOptions': {
                                    'pattern': 'MM/dd/y'
                                    }
                                }"
                                maxDate="{/payPeriodEndDate}"
                                change=".onChangeDate"
                                valueFormat="MM/dd/y"
                                showCurrentDateButton="true" />
                               
            </l:HorizontalLayout>
            </Panel> -->

             <Panel  width="auto" class="sapUiResponsiveMargin" >
                <FlexBox class="sapUiLargeMarginEnd" justifyContent="SpaceBetween" >
                    <items>
                        <FlexBox>   
                            <Label id="_IDGenLabel1" text="Date :" class="sapUiTinyMarginEnd" />
                            <Text id="dateTextField" text=""  />
                        </FlexBox>
                        <SearchField liveChange=".onSearch" width="70%" class="sapUiLargeMarginEnd" />
                    </items>
                </FlexBox>
            </Panel>


           <VBox  >
           <ScrollContainer  horizontal="true" vertical="true" focusable="true">
                <Table fixedLayout="false"
                        width="250%"
                        class="sapUiResponsiveMargin"
                        id="workDetailTab"
                        mode="None"
                        items = "{path:'context>/main'}"
                       
                    >
                       
                        <columns >
                         
                            <Column  >
                                <Text text="Resources" />
                            </Column>
                              <Column  >
                                <Text  text="Employee Name" />
                            </Column>
                            <!-- <Column  >
                                <Text  text="Date" />
                            </Column> -->
                            <Column  >
                                <Text text="Activity" />
                            </Column>
                            <Column  >
                                <Text  text="Job" />
                            </Column>
 
                             <Column  >
                                <Text text="Job Description" />
                            </Column>
 
                            <Column >
                                <Text  text="Section" />
                            </Column>
 
                            <Column  >
                                <Text  text="Section Description" />
                            </Column>
 
                            <Column   >
                                <Text  text="Phase" />
                            </Column>
 
                             <Column  >
                                <Text  text="Phase Description" />
                            </Column>

                            <Column  >
                                <Text  text="Qty" />
                            </Column>
 
                            <Column  >
                                <Text  text="WorkOrder" />
                            </Column>
 
                             <Column  >
                                <Text  text="WorkOrder Description" />
                            </Column>
 
                             <Column  >
                                <Text text="Cost Center" />
                            </Column>
 
                             <Column >
                                <Text  text="Receiving Unit - Truck" />
                            </Column>
 
                             <Column  >
                                <Text  text="Sending Unit - Trailer" />
                            </Column>
 
                             <!-- <Column  id="_IDGenColumn16">
                                <Text id="_IDGenText16" text="Qty" />
                            </Column> -->
 
                             <Column >
                                <Text  text="UoM" />
                            </Column>
 
                             <Column  >
                                <Text  text="Pay Code" />
                            </Column>
 
                             <Column  >
                                <Text  text="Hours" />
                            </Column>
                           
                           <Column >
                                <Text  text="Comments" />
                            </Column>
                        </columns>
                        <items>
                        <ColumnListItem  vAlign="Middle" type="Active" press="onTableRowClick">
                        <cells>
                           
                                    <Input 
                                        value="{context>Resource}"
                                        type="Text"
                                        placeholder="Enter Resource"
                                        showValueHelp="true"
                                        valueHelpRequest="resourceHandleValueHelp"
                                        editable="{= ${context>Resource} === '' ? false : true }" 
                                    />
                                     <Text 
                                       
                                        text="{context>EmployeeName}"
 
                                    />

                                    <!-- <Text
                                       
                                        text="{context>Date}"
 
                                    /> -->

                                    <Input 
                                        type="Text"
                                        value="{context>Activity}"
                                        placeholder="Enter Activity"
                                       showValueHelp="true"
                                       valueHelpRequest="activityHandleValueHelp"
                                       editable="{= ${context>Activity} === '' ? false : true }" /> 


                                    <Input 
                                        type="Text"
                                        value="{context>Job}"
                                        placeholder="Enter Job"
                                       showValueHelp="true"
                                       valueHelpRequest="jobHandleValueHelp"
                                       editable="{= ${context>Job} === '' ? false : true }" /> 
                                       
                                   
                                    <Text 
                                       
                                        text="{context>JobDescription}"
                                        
                                       /> 

 
                                    <Input 
                                        value="{context>Section}"
                                         type="Text"
                                        placeholder="Enter Section"
                                       showValueHelp="true"
                                       valueHelpRequest="sectionHandleValueHelp"
                                       editable="{= ${context>Section} === '' ? false : true }"
                                    />
 
                                    <Text 
                                    
                                        text="{context>SectionDescription}"
                                        
                                    />
 
                                     <Input
                                        value="{context>Phase}"
                                         type="Text"
                                        placeholder="Enter Phase"
                                       showValueHelp="true"
                                       valueHelpRequest="phaseHandleValueHelp"
                                       editable="{= ${context>Phase} === '' ? false : true }"
                                    />
 
                                     <Text
                                       
                                        text="{context>PhaseDescription}"
                                        
                                    />

                                     <Input 
                                        value="{context>Qty}"
                                        placeholder="Qty"
                                        editable="{= ${context>Qty} === '' ? false : true }"
                                    />
 
                                     <Input 
                                        value="{context>Workorder}"
                                         type="Text"
                                        placeholder="Enter WorkOrder"
                                       showValueHelp="true"
                                       valueHelpRequest="workorderHandleValueHelp"
                                       editable="{= ${context>Workorder} === '' ? false : true }"
                                    />
 
                                     <Text 
                                       
                                        text="{context>WorkOrderDescription}"
                                       
                                    />
 
 
                                     <Input 
                                        value="{context>CostCenter}"
                                         type="Text"
                                        placeholder="Enter Cost Center"
                                       showValueHelp="true"
                                       valueHelpRequest="costcenterHandleValueHelp"
                                       editable="{= ${context>CostCenter} === '' ? false : true }"

                                    />
 
                                     <Input 
                                        value="{context>ReceivingUnitTruck}"
                                         type="Text"
                                        placeholder="Enter Receiving Unit - Truck"
                                       showValueHelp="true"
                                       valueHelpRequest="receivingunitHandleValueHelp"
                                       editable="{= ${context>ReceivingUnitTruck} === '' ? false : true }"
                                    />
 
                                      <Input 
                                        value="{context>SendingUnitTrailer}"
                                         type="Text"
                                        placeholder="Enter Sending Unit - Trailer"
                                       showValueHelp="true"
                                       valueHelpRequest="sendingunitHandleValueHelp"
                                       editable="{= ${context>SendingUnitTrailer} === '' ? false : true }"
                                    />
 
                                     
 
                                      <Input 
                                        value="{context>UoM}"
                                         type="Text"
                                        placeholder="Enter UoM"
                                       showValueHelp="true"
                                       valueHelpRequest="uomHandleValueHelp"
                                       editable="{= ${context>UoM} === '' ? false : true }"
                                    />
 
                                      <Input 
                                        value="{context>PayCode}"
                                         type="Text"
                                        placeholder="Enter Pay Code"
                                       showValueHelp="true"
                                       valueHelpRequest="paycodeHandleValueHelp"
                                       editable="{= ${context>PayCode} === '' ? false : true }"
                                    />
 
                                      <Input 
                                        value="{context>Hours}"
                                        placeholder="Hours"
                                        editable="{= ${context>Hours} === '' ? false : true }"
                                    />
 
                                     <Input 
                                        value="{context>Comments}"
                                        placeholder="Comments"
                                    />
 
                                   
 
 
                                 
 
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                    </ScrollContainer>
                    </VBox>
                   
            </content>
        </Page>
</App>

</mvc:View>
